<h1>Workspace#all</h1>
<p>Find me in app/views/workspace/all.html.erb</p>

<%= link_to "create New Workspace", new_user_workspace_path %>

<% if @workspaces.length > 0 %>
  <% @workspaces.each do |w| %>
    <div class="card workspace">
      <h2><%= w.name %></h2>
      <div class=<%= w.smoke_free? ? 'smoke_free' : 'allow-smoking' %>></div>
      <div class=<%= "rating #{w.rating}" %>></div>
    </div>
  <% end %>
<% end %>